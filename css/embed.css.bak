*{
	margin:0;
	padding:0;
}

HTML{
	background:url(../img/2222.jpg)
}
#musicPlayer{
	position:relative;
	margin:20px auto;
	width:800px;
	height:500px;
	
}

.img{
	float:left;
	width:75%;
	height:90%;
	transition:transform 1s;
	-webkit-transition:transform 1s ;
	
}

.img:hover{
	transform:rotate3d(60,60,60,360deg);
	-webkit-transform:rotate3d(60,60,60,360deg);
}

.img img{
	width:100%;
	height:100%;
	
}

.lyric{
	float:right;
	width:25%;
	height:90%;
	background:rgba(0,0,0,.8);
}

.lyric ul{
	position:relative;
	margin:20px auto;
	list-style:none;
	width:57%;
	height:22%;
}
.lyric ul .lijia img{
	border-radius:50%;
	box-shadow:0 0 15px #fff;
	animation:run 10s linear infinite;
}

@-webkit-keyframes run{
	From{transform:rotate(0deg);}
    To{transform:rotate(360deg);}
}


.lyric ul .songName{
	text-align:center;
	line-height:40px;
	color:white;
	border-bottom:1px solid white;
}

.lyric textarea{
	position:relative;
	margin:100px 30px;
}

.footer{
	float:left;/*正确的做法，清除浮动*/
	width:100%;
	height:10%;
	background:rgba(0,0,0,.5);
	
}
